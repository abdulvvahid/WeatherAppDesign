<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasuruan"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:textSize="24sp"
            android:textColor="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_city_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:45 PM"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/view2"
        android:layout_width="238dp"
        android:layout_height="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1">

        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/iv_app_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/Group13"/>

        <TextView
            android:id="@+id/tv_date_today"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Sunday, 8 March 2021"
            android:textSize="11sp"
            android:layout_marginTop="30dp"
            android:shadowRadius="10"
            android:padding="8dp"
            android:background="@drawable/bg_white_for_date"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/nunito_sans_bold"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/iv_icon_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/Mooncloudfastwind"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_weather_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23Â°"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="72sp"
                android:fontFamily="@font/nunito_sans_bold"/>
            <TextView
                android:id="@+id/tv_weather_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moon Cloud Fast Wind"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/nunito_sans_black"/>


        </LinearLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>